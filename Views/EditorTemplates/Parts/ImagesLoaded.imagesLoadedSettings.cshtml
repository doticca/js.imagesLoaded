@using js.imagesLoaded.ViewModels;
@model imagesLoadedSettingsViewModel

<fieldset class="imagesloaded">
    <legend>@T("imagesLoaded")</legend>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="imagesLoadedSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables imagesLoaded script on every page header.")</span>
    </div>
    <div data-controllerid="imagesLoadedSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="imagesLoadedSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables imagesLoaded script on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".imagesLoaded").find("input[name='imagesLoadedSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}